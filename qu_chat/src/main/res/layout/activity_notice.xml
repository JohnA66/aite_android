<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.haoniu.quchat.widget.EaseImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_35"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_avatar" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_time"
                android:textColor="#999999"
                android:text=""
                android:textSize="@dimen/sp_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shap_white"
            android:minHeight="@dimen/dp_106"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_27"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_27"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/sp_15"
            android:maxLength="50"/>

        <EditText
            android:visibility="gone"
            android:gravity="start"
            android:layout_width="match_parent"
            android:id="@+id/et_notice"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shap_white"
            android:minHeight="@dimen/dp_200"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_27"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_27"
            android:maxLength="300"
            android:hint="请输入内容"
            android:textColor="#000000"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@color/login_lie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#F5F7FA"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="仅群主可编辑" />
    </RelativeLayout>
</LinearLayout>
