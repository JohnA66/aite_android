<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.haoniu.quchat.login.LoginNewActivity">

    <TextView
        android:id="@+id/tv_register_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_21"
        android:paddingRight="@dimen/dp_21"
        android:layout_gravity="right"
        android:text="注册"
        android:textColor="#7573CD"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_81"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_login_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_gravity="center_horizontal"
        android:text="欢迎登录~"
        android:textColor="#282828"
        android:textSize="@dimen/sp_15" />

    <EditText
        android:drawableLeft="@mipmap/ic_phone"
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:drawablePadding="@dimen/dp_10"
        android:background="@null"
        android:hint="请输入手机号"
        android:imeActionLabel="sign in"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:singleLine="true"
        android:textColorHint="@color/grey_2"
        android:textColor="@color/black_text"
        android:text=""
        android:textSize="@dimen/sp_15" />
    <View
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        style="@style/line_style"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_cylinder"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请输入密码"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLength="16"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textColor="@color/black_text"
        android:singleLine="true"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ly_login_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center">
        <EditText
            android:id="@+id/login_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:imeActionLabel="sign in"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/ic_note_code"
            android:textColor="@color/black_text"
            android:singleLine="true"
            android:textColorHint="@color/grey_2"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/login_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="获取验证码"
            android:textColor="#0A8A01"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        style="@style/line_style"/>

    <TextView
        android:id="@+id/submit_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/shape_bg_radious999_jianbian_blue_b525ff_to_762bff"
        android:gravity="center_vertical|center_horizontal"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">
        <TextView
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:id="@+id/login_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="验证码登录"
            android:textColor="#282828"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:id="@+id/forget"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#282828"
            android:textSize="@dimen/sp_15" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="50dp">
        <TextView
            android:id="@+id/freeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冻结账户"
            android:textColor="#282828"
            android:textSize="13sp" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#282828"/>

        <TextView
            android:id="@+id/thaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解冻账户"
            android:textColor="#282828"
            android:textSize="13sp"
            />
    </LinearLayout>

</LinearLayout>
