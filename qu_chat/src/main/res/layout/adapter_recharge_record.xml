<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/tx" />

    <TextView
        android:id="@+id/tv_recharge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@+id/img"
        android:text="零钱充值"
        android:textColor="#353434"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/ll_statue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/img"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/tv_recharge_type"
        >

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核中"
            android:textColor="#353434"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/tv_state_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="#A9A9A9"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/tv_yhk"
            android:layout_width="@dimen/dp_126"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/bg_border_audit_1"
            android:gravity="center"
            android:text="提现到银行卡"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/ll_statue"
        android:text="2019/03/04"
        android:textColor="#A9A9A9"
        android:textSize="@dimen/sp_12" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="54"
        android:textColor="#353434"
        android:textSize="@dimen/sp_17" />

</RelativeLayout>