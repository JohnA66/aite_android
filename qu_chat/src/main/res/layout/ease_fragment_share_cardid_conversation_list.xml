<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:orientation="vertical">

    <com.haoniu.quchat.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        hyphenate:titleBarTitle="艾特" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="会话"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/dp_5"
            android:src="@drawable/tj"
            android:visibility="gone" />
        <!--xgp add 2.22-->
        <TextView
            android:visibility="gone"
            android:id="@+id/multi_device"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/ic_multi_device"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="多设备在线登录"
            android:textColor="#ff666666"
            android:background="#fbfbfb"
            android:textSize="13sp"
            />
    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white">

        <EditText
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_main_search_radius"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_15" />

        <ImageButton
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dp_27"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/dp_5"
            android:src="@drawable/shanc"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ss"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/sp_13" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_error_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.haoniu.quchat.widget.EaseConversationList
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        hyphenate:cvsListPrimaryTextSize="@dimen/sp_16" />

</LinearLayout>