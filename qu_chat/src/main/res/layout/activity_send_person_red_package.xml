<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_red_package_radius"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="总金额"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="元"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_red_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_yuan"
            android:layout_toRightOf="@+id/tv_left"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="0.00"
            android:inputType="numberDecimal|number"
            android:textColor="@color/grey_2"
            android:textColorHint="@color/grey_2"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_red_package_radius"
        android:gravity="top"
        android:hint="恭喜发财，大吉大利！"
        android:maxLines="5"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_14"
        android:textColor="@color/grey_2"
        android:textColorHint="@color/grey_2"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/tv_red_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_46"
        android:gravity="center"
        android:text="￥0.00"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_send_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/bor_login"
        android:gravity="center"
        android:paddingTop="@dimen/dp_11"
        android:paddingBottom="@dimen/dp_11"
        android:text="塞钱进红包"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>