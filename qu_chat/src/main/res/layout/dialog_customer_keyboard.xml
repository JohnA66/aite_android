<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/delete_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:text="输入密码"
            android:textColor="#000000"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#d1d2d6" />

    <LinearLayout
        android:id="@+id/llay_select_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="选择支付方式"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/grey_3" />

        <RelativeLayout
            android:id="@+id/llay_balance_select"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/yue_green"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="余额"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_balance_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="16dp"
                android:src="@mipmap/xuanz_green" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/grey_3" />

        <RelativeLayout
            android:id="@+id/llay_bank_car_select"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/yhk_green"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="银行卡"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_bank_car_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="16dp"
                android:src="@mipmap/xuanz_green"
                android:visibility="gone"/>

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/llay_zfb_car_select"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_zfb_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableStart="@mipmap/zfba1"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="支付宝"
                android:textColor="@color/black_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_zfb_car_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="16dp"
                android:src="@mipmap/xuanz_green"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>


    <com.haoniu.quchat.widget.PasswordEditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_60"
        android:background="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8"
        app:bgCorner="@dimen/dp_3"
        app:passwordColor="@color/black_deep" />


    <com.haoniu.quchat.widget.CustomerKeyboard
        android:id="@+id/custom_key_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10" />
</LinearLayout>