<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_102"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_102"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color_my_gold"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            tools:text="近三天" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_default_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_head"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_13">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小小春"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="***"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_inviter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="***"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_alignTop="@+id/avatar"
                    android:id="@+id/tv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/agree_friend_bg_selector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="通过"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:layout_marginTop="@dimen/dp_13"
                    android:id="@+id/tv_refuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_agree"
                    android:background="@drawable/refuse_friend_bg_selector"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_18"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="拒绝"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#fafafa" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_del"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:background="@color/holo_red_light"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13" />
</LinearLayout>