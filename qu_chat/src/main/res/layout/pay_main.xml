<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_pay"
        layout="@layout/toolbar_layout" />

    <TextView
        android:id="@+id/tv_select_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_14"
        android:text="充值金额"
        android:textColor="#2B2929"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_pay" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recycler_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shap_white"
        android:paddingTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_select_money" />

    <TextView
        android:id="@+id/tv_select_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_14"
        android:text="选择银行卡"
        android:textColor="#2B2929"
        android:visibility="gone"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_recycler_money" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recycler_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_select_bank" />

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/rv_recycler_money">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_14"
            android:text="选择支付方式"
            android:textColor="#2B2929"
            android:textSize="@dimen/sp_13" />
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/tv_yhk"
            android:drawableRight="@mipmap/xuanz_green"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/yhka"
            android:gravity="center|left"
            android:text="银行卡支付"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zfb"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/zfba1"
            android:gravity="center|left"
            android:text="支付宝支付"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_new_bank_card_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/comm_affirm_btn"
        android:gravity="center"
        android:text="充值"
        android:textColor="#FFFEFE"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
