<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@drawable/shape_login_line"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_auth_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20"
                android:text="实名认证"
                android:textColor="@color/text_color_qp_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_upload_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20"
                android:text="上传身份证"
                android:textColor="@color/text_color_qp_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_bank_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20"
                android:text="我的银行卡"
                android:textColor="@color/text_color_qp_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_set_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20"
                android:text="设置密码"
                android:textColor="@color/text_color_qp_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20"
                android:text="忘记密码"
                android:textColor="@color/text_color_qp_black"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/tv_update_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="?attr/selectableItemBackground"
                android:drawableRight="@drawable/jingru"
                android:drawablePadding="@dimen/dp_17"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20"
                android:text="修改密码"
                android:textColor="@color/text_color_qp_black"
                android:textSize="@dimen/sp_12" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>