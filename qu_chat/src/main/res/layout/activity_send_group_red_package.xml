<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_red_package_radius"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_left_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="总金额"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_red_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_left_yuan"
            android:layout_toLeftOf="@+id/tv_yuan"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="0.00"
            android:inputType="numberDecimal|number"
            android:maxLength="11"
            android:textColor="@color/black_text"
            android:textColorHint="@color/grey_2"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_red_package_radius"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_unit_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="红包个数"
            android:gravity="center_vertical"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="个"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_red_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_unit_left"
            android:layout_toLeftOf="@+id/tv_unit"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="填写个数"
            android:inputType="number"
            android:maxLength="8"
            android:textColor="@color/black_text"
            android:textColorHint="@color/grey_2"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/grey_2"
        android:textSize="@dimen/sp_14"
        tools:text="本群共4人" />


    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_106"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_red_package_radius"
        android:gravity="top"
        android:hint="恭喜发财，大吉大利！"
        android:maxLines="5"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_14"
        android:textColor="@color/black_text"
        android:textColorHint="@color/grey_2"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/tv_red_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_29"
        android:gravity="center"
        android:text="￥0.00"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_send_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_31"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bor_login"
        android:gravity="center"
        android:paddingTop="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13"
        android:text="塞钱进红包"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

</LinearLayout>