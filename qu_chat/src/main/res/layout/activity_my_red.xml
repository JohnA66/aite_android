<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xTablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/white"
        app:xTabIndicatorHeight="0dp"
        app:xTabIndicatorWidth="0dp"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="@color/blue5"
        app:xTabSelectedTextSize="@dimen/sp_14"
        app:xTabTextColor="@color/black_text"
        app:xTabTextSize="@dimen/sp_14" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0_5"
        android:background="@drawable/shape_login_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>