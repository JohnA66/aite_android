<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoniu.quchat.pay.WithdrawNewActivity">

    <include
        android:id="@+id/withdraw_toolbar"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/cl_withdraw_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hand_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_15"
                android:text="提现金额（当前手续费率为）"
                android:textColor="#2B2929"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_26">

                <TextView
                    android:id="@+id/tv_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="¥"
                    android:textColor="#2B2929"
                    android:textSize="@dimen/sp_32" />

                <EditText
                    android:id="@+id/et_withdraw_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toRightOf="@+id/tv_l"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLength="4"
                    tools:text="0.00000"
                    android:textColor="#3B3A3A"
                    android:textSize="@dimen/sp_32" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_31"
                    android:background="#E0E0E0" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_my_money_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_11"
                android:textColor="#9D9D9D"
                android:textSize="@dimen/sp_13"
                tools:text="我的余额：0.00元，最低100.00元起提" />

            <TextView
                android:id="@+id/tv_new_bank_card_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_31"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/comm_affirm_btn"
                android:gravity="center"
                android:text="提现"
                android:textColor="#FFFEFE"
                android:textSize="@dimen/sp_15" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:text="提现说明："
                android:lineSpacingExtra="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_16"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/tv_tixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                tools:text="aaaaaaaa"
                android:lineSpacingExtra="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
