<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_bg_radious10dp_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F5F6FA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="9dp"
                android:textColor="#333"
                android:textSize="14sp"/>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingTop="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="14dp">

            <TextView
                android:id="@+id/tv_not_agree"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_nullbg_radious999dp_red_ff2b53"
                android:gravity="center"
                android:text="不同意"
                android:textColor="#ff2b53"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_bg_radious999dp_red_ff2b53"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>