<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_350"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/hbbg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/quxiao" />

        <LinearLayout
            android:id="@+id/ll_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.haoniu.quchat.widget.EaseImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_22"
                android:src="@mipmap/img_default_avatar" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="#FFD68E"
                android:textSize="@dimen/sp_13"
                tools:text="慕枫1127" />


            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="#FFD68E"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_red_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableRight="@mipmap/jinru"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_15"
                android:text="查看红包详情"
                android:textColor="#FFD68E"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_closes"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/rel_open"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_above="@+id/img_bottom"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_75">

            <ImageView
                android:id="@+id/img_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/kai" />

            <ImageView
                android:id="@+id/img_opening"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/img_hb_open"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_check_detail"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看领取详情"
            android:textColor="#FFD68E"
            android:textSize="@dimen/sp_13"
            android:paddingBottom="@dimen/dp_13"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_13"
            android:src="@mipmap/hbh" />
    </RelativeLayout>
</RelativeLayout>
