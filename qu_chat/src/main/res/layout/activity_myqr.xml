<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:id="@+id/rl_qrcode_view"
        android:layout_width="315dp"
        android:layout_height="410dp"
        android:layout_below="@+id/llayout_title_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shap_white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            >
            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:background="@color/white" />

            <com.haoniu.quchat.widget.EaseImageView
                android:layout_centerInParent="true"
                android:id="@+id/img_qr_head"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_margin="20dp"
                android:layout_marginTop="@dimen/dp_19"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default_avatar" />

        </RelativeLayout>



        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="20dp"
            android:layout_marginTop="@dimen/dp_19"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_avatar" />

        <TextView
            android:id="@+id/tv_qr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toRightOf="@+id/img_head"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:text="我的朋友胡适之" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_chat_number"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_qr_name"
            android:layout_toRightOf="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            android:text="艾特号:" />


        <TextView
            android:id="@+id/tv_card_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="扫一扫上面的二维码，加我艾特好友"
            android:textColor="#ff666666"
            android:textSize="12sp" />



    </RelativeLayout>

    <FrameLayout
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:layout_below="@+id/rl_qrcode_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/comm_affirm_btn">

        <TextView
            android:id="@+id/tv_save_qr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="保存二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </FrameLayout>


</RelativeLayout>