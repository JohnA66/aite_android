<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.haoniu.quchat.widget.ContactItemView
        android:id="@+id/friend_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contactItemImage="@mipmap/ic_contact_friend_notic"
        app:contactItemName="新的朋友"/>

    <com.haoniu.quchat.widget.ContactItemView
        android:id="@+id/group_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contactItemImage="@mipmap/ic_contact_group_notic"
        app:contactItemName="群通知"/>

    <com.haoniu.quchat.widget.ContactItemView
        android:id="@+id/group_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contactItemImage="@mipmap/ic_contact_group"
        app:contactItemName="我的群组"/>


</LinearLayout>