<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haoniu.quchat.pay.RechargeNewActivity">

    <include layout="@layout/toolbar_layout" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:background="@color/white"
        android:id="@+id/card_view"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="16dp"
        android:layout_height="145dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="充值金额"
                android:textColor="@color/lesserText"
                android:layout_marginTop="20dp"
                android:id="@+id/tv"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="¥"
                android:layout_below="@+id/tv"
                android:textColor="@color/black_text"
                android:layout_marginTop="28dp"
                android:textSize="36sp"
                android:id="@+id/tv_symbol"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:digits="0123456789."
                android:layout_below="@+id/tv"
                android:layout_toRightOf="@+id/tv_symbol"
                android:textColor="@color/black_text"
                android:inputType="numberDecimal"
                android:layout_marginTop="28dp"
                android:textSize="36sp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_recharge_remark"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="备注"
            android:textColor="@color/black_text"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:textColor="@color/black_deep"
            android:inputType="text"
            android:layout_centerVertical="true"
            android:layout_toRightOf= "@+id/tv_remark"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:text="充值说明："
        android:lineSpacingExtra="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16" />
    <TextView
        android:id="@+id/tv_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="14sp"
        android:lineSpacingExtra="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:paddingBottom="20dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/comm_affirm_btn">

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="去充值"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </FrameLayout>

</LinearLayout>
