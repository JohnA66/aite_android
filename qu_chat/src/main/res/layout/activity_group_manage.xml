<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llayout_title_1"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/white"
        android:divider="@drawable/shape_login_line"
        android:orientation="vertical"
        android:showDividers="middle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="全员禁言"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_13" />

            <Switch
                android:id="@+id/switch_shut_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_18"
                android:gravity="center_vertical" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_set_group_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/more_1x"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_15"
            android:text="设置管理员"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_13" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_18"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="启用群二维码"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_13" />

            <Switch
                android:id="@+id/switch_group_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>