<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="normal">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_64"
        android:background="#FF5722">

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#FF5722"
            android:textColor="@android:color/white"
            android:text="删除"/>
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/list_itease_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@drawable/ease_mm_listitem"
        >

        <com.haoniu.quchat.widget.EaseImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/img_default_avatar" />


        <ImageView
            android:id="@+id/img_chat_unread_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginRight="@dimen/dp_3"
            android:src="@mipmap/red_point"
             />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@id/avatar"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:typeface="serif"
            tools:text="慕枫" />

        <TextView
            android:layout_alignTop="@id/avatar"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10"
            tools:text="上午  11:31" />

        <ImageView
            android:id="@+id/msg_state"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toRightOf="@id/avatar"
            android:src="@drawable/ease_msg_state_fail_resend"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mentioned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_toRightOf="@id/msg_state"
            android:paddingLeft="@dimen/dp_7"
            android:text="@string/were_mentioned"
            android:textColor="#e84e40"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_toLeftOf="@id/time"
            android:layout_toRightOf="@id/mentioned"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:singleLine="true"
            android:text="大家熬好"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:visibility="gone"
            android:minWidth="@dimen/dp_15"
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_unread_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_alignParentBottom="true"
            tools:text="1" />

        <ImageView
            android:id="@+id/img_msg_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5"
            android:src="@mipmap/msg_free"
            android:visibility="gone" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#fafafa"/>

    </RelativeLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>