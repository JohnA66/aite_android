<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_my_gold">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:divider="@drawable/shape_login_line"
            android:orientation="vertical"
            android:showDividers="middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:layout_centerVertical="true"
                    tools:src="@mipmap/img_default_avatar" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_toRightOf="@+id/img_head"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    tools:text="程吉吉" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jingru" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/bg_color_my_gold" />

            <RelativeLayout
                android:id="@+id/rl_my_qr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的二维码"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/saima"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_2"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:id="@+id/tv_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="艾特号"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_toRightOf="@+id/tv_acc"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_12"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="未设置"

                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_my_sign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="个性签名"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@+id/tv_s"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_12"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="未设置"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color_my_gold" />

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_12"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/sp_14"
                    tools:text="188-5597-2230" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="分享我的名片"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_12"
                    android:textColor="@color/grey_2"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color_my_gold" />

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>