<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold"
    android:orientation="vertical">


    <include layout="@layout/toolbar_layout" />

    <FrameLayout
        android:id="@+id/fl_query"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ss"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/sp_13" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:divider="@drawable/shape_login_line"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/rl_scan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"
            android:layout_marginTop="@dimen/dp_5"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_zx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/sys" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/img_zx"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="扫描二维码名片"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_wx_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="@dimen/dp_15"

            android:visibility="gone">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/tianjiaweixin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/img_add"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加微信好友"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="分享链接给微信好友"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_61"
            android:background="?android:attr/selectableItemBackground"

            android:paddingLeft="@dimen/dp_15">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/tianjiashoujiren" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/img_phone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机联系人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="添加手机通讯录好友"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_14"
            android:background="@color/bg_color_my_gold" />

        <FrameLayout
            android:id="@+id/rl_my_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_51"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ewm2"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center"
                android:text="我的二维码"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>