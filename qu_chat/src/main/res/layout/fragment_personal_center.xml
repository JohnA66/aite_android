<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_my_gold">

    <TextView
        android:id="@+id/my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        android:drawableRight="@drawable/psishe"
        android:gravity="center"
        android:paddingRight="@dimen/dp_16"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my"
        android:layout_marginBottom="@dimen/dp_10"
        android:fitsSystemWindows="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_153"
                android:background="@drawable/shape_bg_rect_jianbian_blue_786cce_to_c528be">

            <RelativeLayout
                android:id="@+id/rel_my_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_97"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_bg_radious10dp_top_white"
                android:paddingLeft="@dimen/dp_11"
                android:paddingRight="@dimen/dp_15">


                <LinearLayout
                    android:id="@+id/ll_users"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_toRightOf="@+id/my_head"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold"
                        tools:text="小小春" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableLeft="@drawable/saima"
                        android:drawablePadding="@dimen/dp_3"
                        android:gravity="left|center_vertical"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:textColor="@color/grey_2"
                        android:textSize="@dimen/sp_12"
                        tools:text="12313131313131313131" />


                </LinearLayout>

                <com.haoniu.quchat.widget.EaseImageView
                    android:id="@+id/my_head"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:src="@mipmap/img_default_avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_5" />

            </RelativeLayout>

            </FrameLayout>


            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="@dimen/dp_21"
                android:paddingRight="@dimen/dp_20">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_toRightOf="@+id/qianbao"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="零钱"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/grey_2"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        tools:text="余额：￥0.00" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/qianbao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lingqian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/jingru" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:divider="@drawable/shape_login_line"
                android:orientation="vertical"
                android:showDividers="middle">


                <TextView
                    android:id="@+id/tv_scan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:drawableLeft="@drawable/saoyisao"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_13"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="扫一扫"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/wodeshouc"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="我的收藏"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:divider="@drawable/shape_login_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_shop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/img_shop"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="艾特商城"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_share_qr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/fenxiang"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="分享二维码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_device"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@mipmap/ic_mine_device"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="多设备登录"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/shez"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="设置"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />


                <TextView
                    android:id="@+id/tv_custom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/kefu"
                    android:drawableRight="@drawable/jingru"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:paddingRight="@dimen/dp_20"
                    android:text="艾特客服"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
