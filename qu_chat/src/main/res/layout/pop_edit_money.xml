<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_main_serach_radius"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:text="房间发包金额区间"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最小金额: "
                android:textColor="@color/text_color_exit_group_black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_nick_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@null"
                android:digits="1234567890"
                android:drawableBottom="@drawable/shape_login_line"
                android:hint="请输入最小金额"
                android:inputType="number"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大金额: "
                android:textColor="@color/text_color_exit_group_black"
                android:textSize="@dimen/sp_13" />

            <EditText
                android:id="@+id/et_nick_name_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@null"
                android:digits="1234567890"
                android:drawableBottom="@drawable/shape_login_line"
                android:hint="请输入最大金额"
                android:inputType="number"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/login_bg_selector_copy"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>