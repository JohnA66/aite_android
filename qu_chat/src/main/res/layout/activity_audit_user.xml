<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/img_default_avatar" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/img_head"
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="***"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginBottom="@dimen/dp_1"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/line_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    tools:text="在线"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_nick_name"
                    android:layout_toRightOf="@id/img_head"
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_11"
                    tools:text="@string/str_chat_account" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:text="来源"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对方通过搜索手机号添加"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/selector_comm_btn"
                android:drawableRight="@drawable/jingru"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:text="加入黑名单"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginTop="1dp"
                android:id="@+id/tv_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/selector_comm_btn"
                android:drawableRight="@drawable/jingru"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:text="举报"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />




            <TextView
                android:layout_marginBottom="@dimen/dp_1"
                android:id="@+id/agree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/selector_comm_btn"
                android:gravity="center"
                android:text="同意"
                android:textColor="#22D43C"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/reject"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/selector_comm_btn"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="#000000"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>


    </ScrollView>
</LinearLayout>