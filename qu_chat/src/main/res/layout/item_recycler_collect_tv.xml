<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/shap_white"
    android:minHeight="@dimen/dp_106"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_collect_char"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_15"
            android:text="修改昵称修改昵称修改昵称修"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_collect_name_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="小小春  2019-5-12"
            android:textColor="@color/grey_2"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_130"
        android:layout_height="match_parent"
        android:background="@drawable/shap_red"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</LinearLayout>