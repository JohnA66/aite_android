<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/custom1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:background="?android:attr/selectableItemBackground"
            >

            <com.haoniu.quchat.widget.EaseImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/img_default_avatar"
                />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_53"
                android:layout_marginTop="@dimen/dp_2_5"
                android:background="@drawable/point_red"
                android:gravity="center"
                android:visibility="gone"
                android:minWidth="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                tools:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sp_16"
                android:layout_toRightOf="@id/img_head"
                android:text="客服1"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_14"
                />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0_5"
            android:background="@drawable/shape_login_line"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
